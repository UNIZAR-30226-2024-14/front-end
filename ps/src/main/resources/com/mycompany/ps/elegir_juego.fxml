<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.ps.ElegirJuego"
     style="-fx-background-image: url('images/Home.png'); -fx-background-size: cover; -fx-background-repeat: no-repeat;"
     stylesheets="@/com/mycompany/ps/styles.css">
    <children>
        <Button fx:id="jugar" text="JUGAR EN LOCAL" styleClass="btn-primary2, btn-lg2" prefWidth="400" prefHeight="50" onAction="#jugarLocal" />
        <Button fx:id="perfil" text="JUGAR EN LÍNEA" styleClass="btn-primary2, btn-lg2" prefWidth="400" prefHeight="50" onAction="#jugarOnline" />
        <Button fx:id="volver" text="VOLVER" styleClass="btn-primary2, btn-lg2" prefWidth="400" prefHeight="50" onAction="#volver" />
    </children>
    <ImageView fx:id="animationImageView" fitWidth="200" fitHeight="200" layoutY="200" />
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="300.0" />
    </padding>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.ps.IniciarSesion" style="-fx-background-color: lightblue;">
    <children>
        <Label text="Correo electrónico:" styleClass="h4" />
        <TextField fx:id="correoField" maxWidth="200" promptText="Introduce tu correo electrónico" />
        <Label text="Contraseña:" styleClass="h4" />
        <PasswordField fx:id="contrasenaField" maxWidth="200" promptText="Introduce tu contraseña" />
        <Button text="INICIAR SESIÓN" styleClass="btn-primary, btn-lg" prefWidth="200" prefHeight="50" onAction="#irAMenu" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>

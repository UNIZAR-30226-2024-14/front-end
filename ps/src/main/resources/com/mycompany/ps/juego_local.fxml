<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.ps.JuegoLocal" fx:id="vbox" style="-fx-background-image: url('images/Cp4.png'); -fx-background-size: cover; -fx-background-repeat: no-repeat;" stylesheets="@/com/mycompany/ps/styles.css">
    <children>
        <HBox alignment="CENTER" spacing="50">
            <!-- Botón "Hit" a la izquierda -->
            <Button fx:id="hitButton" text="HIT" prefWidth="100" prefHeight="100" visible="false" onAction="#hitAction"/>
            
            <!-- HBox para el crupier -->
            <VBox alignment="CENTER" spacing="5">
                <HBox fx:id="dealerCardBox" alignment="CENTER" spacing="-100">
                    <!-- Aquí se mostrarán las cartas del crupier -->
                </HBox>
                <Label fx:id="puntosCrupier" text="Puntos: 0" styleClass="bj-field" visible="false" />
            </VBox>
            
            <!-- Botón "Stand" a la derecha -->
            <Button fx:id="standButton" text="STAND" prefWidth="100" prefHeight="100" visible="false" onAction="#standAction"/>
        </HBox>
        
        <Button fx:id="comienzo" text="COMENZAR PARTIDA" styleClass="btn-primary2, btn-lg2" prefWidth="400" prefHeight="50" onAction="#comenzarPartida" />
        
        <VBox alignment="CENTER" spacing="5">
            <HBox fx:id="playerCardBox1" alignment="CENTER" spacing="-100">
                <!-- Aquí se mostrarán las cartas del jugador 1 -->
            </HBox>
            <Label fx:id="puntosJugador1" text="Puntos: 0" styleClass="bj-field" visible="false" />
        </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="500.0" />
    </padding>
</VBox>

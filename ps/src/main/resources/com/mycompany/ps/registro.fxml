<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.ps.Registro" style="-fx-background-image: url('images/P3.png'); -fx-background-size: cover; -fx-background-repeat: no-repeat;" stylesheets="@/com/mycompany/ps/styles.css">
    <children>
        <Label text="Nombre de usuario:" styleClass="h4" />
        <TextField fx:id="usernameField" maxWidth="250" prefHeight="40" promptText="Introduce tu nombre de usuario" styleClass="username-field" />
        <Label text="Correo electrónico:" styleClass="h4" />
        <TextField fx:id="correoField" maxWidth="250" prefHeight="40" promptText="Introduce tu correo electrónico" styleClass="username-field" />
        <Label text="Contraseña:" styleClass="h4" />
        <PasswordField fx:id="contrasena1Field" maxWidth="250" prefHeight="40" promptText="Introduce tu contraseña" styleClass="username-field" />
        <Label text="Repetir contraseña:" styleClass="h4" />
        <PasswordField fx:id="contrasena2Field" maxWidth="250" prefHeight="40" promptText="Introduce tu contraseña" styleClass="username-field" />
        <Button text="COMPLETAR REGISTRO" styleClass="btn-primary2, btn-lg2" prefWidth="250" prefHeight="50" onAction="#irAMenu" />
        <Button text="VOLVER" styleClass="btn-primary2, btn-lg2" prefWidth="250" prefHeight="50" onAction="#irABienvenida" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="300.0" />
    </padding>
</VBox>
